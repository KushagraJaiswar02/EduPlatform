<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="avatar mb-3" style="width:72px;height:72px;font-size:1.6rem;margin:auto;">
                        <%= (typeof user !== 'undefined' && user.name) ? user.name.split(' ').map(n=>n[0]).slice(0,2).join('') : (currentUser && currentUser.name ? currentUser.name.split(' ').map(n=>n[0]).slice(0,2).join('') : 'U') %>
                    </div>
                    <h4 class="mb-0">
                        <%= (typeof user !== 'undefined' && user.name) ? user.name : (currentUser && currentUser.name ? currentUser.name : __('User')) %>
                    </h4>
                    <p class="text-muted small mb-1">
                        <%= (typeof user !== 'undefined' && user.email) ? user.email : (currentUser && currentUser.email ? currentUser.email : '') %>
                    </p>
                    <p class="mb-0"><strong><%= __('Role') %>:</strong> <%= (typeof user !== 'undefined' && user.role) ? __('I\'m a ' + user.role.charAt(0).toUpperCase() + user.role.slice(1)) : (currentUser && currentUser.role ? __('I\'m a ' + currentUser.role.charAt(0).toUpperCase() + currentUser.role.slice(1)) : __("I'm a Student")) %></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong><%= __('Class') %>:</strong> 
                            <% let cr = (typeof user !== 'undefined' && user.classRef) ? user.classRef : (currentUser && currentUser.classRef ? currentUser.classRef : null); %>
                        <% if (cr && cr.classNumber) { %>
                            <%= __('Class') %> <%= cr.classNumber %>
                        <% } else if (cr) { %>
                            <%= __('Assigned') %>
                        <% } else { %>
                            <%= __('Not Assigned') %>
                        <% } %>
                    </li>
                    <li class="list-group-item"><strong><%= __('Quizzes Taken') %>:</strong> <%= (typeof user !== 'undefined' && user.profile) ? user.profile.totalQuizzesTaken : ((currentUser && currentUser.profile) ? currentUser.profile.totalQuizzesTaken : 0) %></li>
                    <li class="list-group-item"><strong><%= __('Avg. Score') %>:</strong> <%= (typeof user !== 'undefined' && user.profile) ? user.profile.averageScore : ((currentUser && currentUser.profile) ? currentUser.profile.averageScore : 0) %></li>
                </ul>
            </div>
        </div>

        <div class="col-md-8">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                    <div class="card h-100 shadow-sm border-primary">
                        <div class="card-body">
                            <h5 class="card-title text-primary">‚ùì <%= __('Doubt Forum') %></h5>
                            <p class="card-text"><%= __('Ask questions and discuss with peers and teachers. Post a new doubt here.') %></p>
                            <a href="/forum/ask" class="btn btn-outline-primary mt-2"><%= __('Post New Doubt') %></a>
                            <a href="/forum" class="btn btn-primary mt-2"><%= __('View All Doubts') %></a>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100 shadow-sm border-info">
                        <div class="card-body">
                            <h5 class="card-title text-info">üìö <%= __('Lessons & Study Material') %></h5>
                            <p class="card-text"><%= __('Access lessons and study material for your subjects.') %></p>
                            <a href="/student/lessons" class="btn btn-outline-info mt-2"><%= __('Go to Lessons') %></a>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100 shadow-sm border-warning">
                        <div class="card-body">
                            <h5 class="card-title text-warning">üìù <%= __('Quizzes & Tests') %></h5>
                            <p class="card-text"><%= __('Take quizzes and tests to assess your knowledge.') %></p>
                            <a href="/student/quizzes" class="btn btn-outline-warning mt-2"><%= __('Take Quiz') %></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
