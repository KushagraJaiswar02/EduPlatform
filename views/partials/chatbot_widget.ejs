<style>
  /* ------------------------------
        Floating Chatbot Button
  --------------------------------*/
  .chatbot-btn {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background: linear-gradient(135deg, #2563eb, #3b82f6);
      color: white;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: pointer;
      box-shadow: 0 6px 16px rgba(0,0,0,0.25);
      z-index: 1100;
      transition: transform .3s ease;
      animation: pulse 2s infinite;
  }
  .chatbot-btn:hover { transform: scale(1.1); }

  @keyframes pulse {
      0% { box-shadow: 0 0 0 0 rgba(37, 99, 235, .4); }
      70% { box-shadow: 0 0 0 18px rgba(37, 99, 235, 0); }
      100% { box-shadow: 0 0 0 0 rgba(37, 99, 235, 0); }
  }

  /* ------------------------------
           Chat Window
  --------------------------------*/
  .chatbot-window {
      position: fixed;
      bottom: 95px;
      right: 20px;
      width: 330px;
      height: 430px;
      display: none;
      flex-direction: column;
      backdrop-filter: blur(18px);
      background: rgba(255,255,255,0.85);
      border-radius: 16px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.2);
      z-index: 1200;
      animation: popup .3s ease-out;
      overflow: hidden;
  }

  @keyframes popup {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
  }

  .chat-header {
      background: linear-gradient(135deg, #2563eb, #3b82f6);
      color: white;
      padding: 12px 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: 600;
  }

  .chat-body {
      flex: 1;
      overflow-y: auto;
      padding: 10px;
      background: rgba(255,255,255,0.9);
  }

  .chat-footer {
      padding: 10px;
      display: flex;
      gap: 8px;
      background: rgba(245,245,245,0.9);
      border-top: 1px solid rgba(0,0,0,0.05);
  }

  .chat-footer input {
      flex: 1;
      border-radius: 8px;
      padding: 8px 10px;
      border: 1px solid #d1d5db;
  }

  .chat-footer button {
      padding: 8px 12px;
      border-radius: 8px;
      border: none;
      background: #2563eb;
      color: white;
      font-weight: 600;
      cursor: pointer;
  }

  /* ------------------------------
         Message Bubbles
  --------------------------------*/
  .msg {
      max-width: 80%;
      padding: 8px 12px;
      border-radius: 14px;
      margin-bottom: 8px;
      font-size: 0.9rem;
      line-height: 1.35rem;
      animation: fadeIn .2s ease;
  }

  @keyframes fadeIn {
      from { opacity: 0; transform: translateY(5px); }
      to { opacity: 1; transform: translateY(0); }
  }

  .msg.user {
      background: #dbeafe;
      margin-left: auto;
      border-bottom-right-radius: 4px;
  }

  .msg.bot {
      background: #f0fdf4;
      margin-right: auto;
      border-bottom-left-radius: 4px;
  }

  .chat-clear {
      background: transparent;
      border: none;
      color: white;
      font-size: 0.8rem;
      cursor: pointer;
      opacity: .9;
  }

  .chat-clear:hover { opacity: 1; }
</style>

<!-- Floating Button -->
<div id="chat-btn" class="chatbot-btn">
    <i class="fas fa-robot fa-lg"></i>
</div>

<!-- Chat Window -->
<div id="chat-window" class="chatbot-window">
    <div class="chat-header">
        EduBot Assistant
        <div>
          <button id="clear-chat" class="chat-clear">Clear</button>
          <button class="chat-clear" onclick="document.getElementById('chat-window').style.display='none'">✕</button>
        </div>
    </div>

    <div id="chat-body" class="chat-body">
      <div class="msg bot">Hello! I’m EduBot — how can I help you today?</div>
    </div>

    <div class="chat-footer">
        <input id="chat-input" type="text" placeholder="Ask something..." />
        <button id="chat-send">Send</button>
    </div>
</div>

<script>
  const win = document.getElementById("chat-window");
  const btn = document.getElementById("chat-btn");
  const body = document.getElementById("chat-body");
  const input = document.getElementById("chat-input");

  btn.onclick = () => {
      win.style.display = win.style.display === "flex" ? "none" : "flex";
      input.focus();
      body.scrollTop = body.scrollHeight;
  };

  function addMsg(type, text) {
      const msg = document.createElement("div");
      msg.className = `msg ${type}`;
      msg.innerHTML = text.replace(/\n/g, "<br>");
      body.appendChild(msg);
      body.scrollTop = body.scrollHeight;
  }

  document.getElementById("chat-send").onclick = send;
  input.addEventListener("keypress", e => (e.key === "Enter" ? send() : ""));

  async function send() {
      const text = input.value.trim();
      if (!text) return;

      addMsg("user", text);
      input.value = "";

      const res = await fetch("/chatbot/send", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ message: text })
      });

      const data = await res.json();
      addMsg("bot", data.reply || "Something went wrong.");
  }

  document.getElementById("clear-chat").onclick = async () => {
      await fetch("/chatbot/clear", { method: "POST" });
      body.innerHTML = `<div class="msg bot">Chat history cleared.</div>`;
  };
</script>
