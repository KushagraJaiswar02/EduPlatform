<!DOCTYPE html>
<html lang="<%= typeof locale !== 'undefined' ? locale : 'en' %>">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'EduBridge Kids' %></title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Manifest + Theme -->
  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#2563eb" />
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
</head>
<body class="bg-light">

<!-- ========== NAVBAR ========== -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
  <div class="container">
    <!-- Brand -->
    <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
      <img src="/images/logo-32.png" alt="Logo" width="32" height="32" class="me-2 d-none d-sm-inline">
      EduBridge Kids
    </a>

    <!-- Toggler for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
      aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <!-- Left Side -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/forum">Forum</a></li>
      </ul>

      <!-- Right Side -->
      <ul class="navbar-nav ms-auto align-items-center">

        <!-- Language toggle -->
        <li class="nav-item me-3 d-flex">
          <a href="/setLang/en" 
             class="btn btn-sm <%= currentLocale === 'en' ? 'btn-primary' : 'btn-outline-secondary' %> me-1">
            EN
          </a>
          <a href="/setLang/hi" 
             class="btn btn-sm <%= currentLocale === 'hi' ? 'btn-primary' : 'btn-outline-secondary' %>">
            HI
          </a>
        </li>

        <% if (typeof role !== 'undefined' && role) { %>
          <!-- LOGGED IN VIEW -->
          <% if (role === 'student') { %>
            <li class="nav-item">
              <a href="/student/dashboard" class="btn btn-sm btn-primary me-2">Student Dashboard</a>
            </li>
          <% } else if (role === 'teacher') { %>
            <li class="nav-item">
              <a href="/teacher/dashboard" class="btn btn-sm btn-success me-2">Teacher Dashboard</a>
            </li>
          <% } else if (role === 'admin') { %>
            <li class="nav-item">
              <a href="/admin/dashboard" class="btn btn-sm btn-dark me-2">Admin Panel</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a href="/logout" class="btn btn-sm btn-outline-danger">Logout</a>
          </li>

        <% } else { %>
          <!-- LOGGED OUT VIEW -->
          <li class="nav-item">
            <a href="/login" class="btn btn-sm btn-outline-primary me-2">Login</a>
          </li>
          <li class="nav-item">
            <a href="/register" class="btn btn-sm btn-primary">Register</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- FLASH MESSAGES -->
<div class="container mt-3">
  <% if (typeof success !== 'undefined' && success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (typeof error !== 'undefined' && error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>

<!-- PAGE BODY START -->
<div class="container mt-4">
