<!DOCTYPE html>
<html lang="<%= (typeof locale !== 'undefined' ? locale : 'en') %>">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>EduBridge Kids</title>

  <!-- in header.ejs -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
  crossorigin="anonymous"
/>


  <!-- PWA manifest -->
  <link rel="manifest" href="/manifest.json" />

  <!-- Favicon (place your favicon in /public/images/favicon.ico) -->
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoY9m/6bq2n1p1bq+7C2mXc6Y5Gq5K5t5Qv8hYf5+1F9+6" crossorigin="anonymous">

  <!-- Your custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- Meta for theme color -->
  <meta name="theme-color" content="#2563eb" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
        <!-- optional small logo -->
        <!-- <img src="/images/logo-32.png" alt="logo" width="32" height="32" class="me-2 d-inline-block align-text-top"> -->
        EduBridge Kids
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
              aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/forum">Forum</a></li>
        </ul>

        <div class="d-flex align-items-center">
          <!-- Language toggle (uses your /setLang/:lang route) -->
          <div class="me-3">
            <a href="/setLang/en" class="btn btn-sm btn-outline-secondary me-1">EN</a>
            <a href="/setLang/hi" class="btn btn-sm btn-outline-secondary">HI</a>
          </div>

          <!-- Role quick links -->
          <a href="/student/dashboard" class="btn btn-sm btn-primary me-2">Student</a>
          <a href="/teacher/dashboard" class="btn btn-sm btn-success">Teacher</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- main container opened here -->
  <div class="container mt-4">

    <!-- Flash messages (uses connect-flash) -->
    <% if (typeof success !== 'undefined' && success && success.length) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error && error.length) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

<!-- page content will be inserted after this partial -->
