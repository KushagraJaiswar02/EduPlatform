<!DOCTYPE html>
<html lang="<%= typeof locale !== 'undefined' ? locale : 'en' %>">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'EduBridge Kids' %></title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome for Chatbot Icon (Fixed Integrity Attribute) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" 
    xintegrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    
  <!-- Manifest + Theme -->
  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#2563eb" />
  <link rel="stylesheet" href="/css/style.css?v=1.0" />
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg ed-nav shadow-sm">
  <div class="container">

    <!-- BRAND -->
    <a class="navbar-brand ed-brand" href="/">
      EduBridge <span>Kids</span>
    </a>

    <!-- MOBILE TOGGLER -->
    <button class="nav-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
      <i class="fa-solid fa-bars"></i>
    </button>

    <!-- NAV CONTENT -->
    <div class="collapse navbar-collapse" id="mainNav">

      <!-- LEFT LINKS -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 ed-left-links">
        <li class="nav-item">
          <a class="nav-link ed-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link ed-link" href="/forum">Forum</a>
        </li>
      </ul>

      <!-- RIGHT SIDE -->
      <ul class="navbar-nav ms-auto align-items-center gap-2 ed-right">

        <!-- LANGUAGE -->
        <div class="lang-switch">
          <a href="/setLang/en" class="lang-pill <%= currentLocale==='en'?'active':'' %>">EN</a>
          <a href="/setLang/hi" class="lang-pill <%= currentLocale==='hi'?'active':'' %>">HI</a>
        </div>

        <% if (role) { %>

          <% if (role === 'student') { %>
            <a href="/student/dashboard" class="ed-btn primary">Student</a>
          <% } %>

          <% if (role === 'teacher') { %>
            <a href="/teacher/dashboard" class="ed-btn green">Teacher</a>
          <% } %>

          <% if (role === 'admin') { %>
            <a href="/admin/dashboard" class="ed-btn dark">Admin</a>
          <% } %>

          <a href="/logout" class="ed-btn outline-red">Logout</a>

        <% } else { %>

          <a href="/login" class="ed-btn outline-blue">Login</a>
          <a href="/register" class="ed-btn primary">Register</a>

        <% } %>

      </ul>

    </div>
  </div>
</nav>


<!-- FLASH MESSAGES -->
<div class="container mt-3">
  <% if (typeof success !== 'undefined' && success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (typeof error !== 'undefined' && error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>

<!-- PAGE BODY START -->
<div class="container mt-4">

