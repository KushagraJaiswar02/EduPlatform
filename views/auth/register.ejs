<%- include('../partials/header') %>

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">
        <h3 class="text-center mb-4 fw-semibold text-primary">
          <i class="bi bi-person-plus-fill me-2"></i> <%= __('Register') %>
        </h3>

        <!-- Register Form -->
        <form action="/register" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label fw-semibold"><%= __('Full Name') %></label>
    <input 
      type="text" 
      class="form-control" 
      id="name" 
      name="name" 
      placeholder="<%= __('Enter your full name') %>" 
      required
    />
  </div>

  <div class="mb-3">
    <label for="email" class="form-label fw-semibold"><%= __('Email address') %></label>
    <input 
      type="email" 
      class="form-control" 
      id="email" 
      name="email" 
      placeholder="<%= __('Enter your email') %>" 
      required
    />
  </div>

  <div class="mb-3">
    <label for="password" class="form-label fw-semibold"><%= __('Password') %></label>
    <input 
      type="password" 
      class="form-control" 
      id="password" 
      name="password" 
      placeholder="<%= __('Create a password') %>" 
      required
    />
  </div>

  <div class="mb-3">
    <label for="confirmPassword" class="form-label fw-semibold"><%= __('Confirm Password') %></label>
    <input 
      type="password" 
      class="form-control" 
      id="confirmPassword" 
      name="confirmPassword" 
      placeholder="<%= __('Confirm your password') %>" 
      required
    />
  </div>

  <div class="mb-3">
    <label for="role" class="form-label fw-semibold"><%= __('Select your role') %></label>
    <select class="form-select" id="role" name="role" required>
      <option value="student" selected><%= __("I'm a Student") %></option>
      <option value="teacher"><%= __("I'm a Teacher") %></option>
    </select>
  </div>

  <!-- Class Selection (only for students) -->
  <div class="mb-3" id="classSelection">
    <label for="classNumber" class="form-label fw-semibold"><%= __('Select a Class') %></label>
    <select class="form-select" id="classNumber" name="classNumber" required>
      <option value="">-- <%= __('Select a Class') %> --</option>
      <% classes.forEach(cls => { %>
        <option value="<%= cls.classNumber %>"><%= __('Class') %> <%= cls.classNumber %></option>
      <% }) %>
    </select>
  </div>

  <div class="d-grid mb-3">
    <button type="submit" class="btn btn-primary btn-lg"><%= __('Register') %></button>
  </div>

  <div class="text-center small">
    <span><%= __('Already have an account?') %></span>
    <a href="/login" class="fw-semibold text-decoration-none"><%= __('Login') %></a>
  </div>
</form>

<!-- Small JS to toggle class dropdown -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const roleSelect = document.getElementById('role');
    const classSelection = document.getElementById('classSelection');
    
    function toggleClassDropdown() {
      if (roleSelect.value === 'student') {
        classSelection.style.display = 'block';
        document.getElementById('classNumber').required = true;
      } else {
        classSelection.style.display = 'none';
        document.getElementById('classNumber').required = false;
      }
    }

    roleSelect.addEventListener('change', toggleClassDropdown);
    toggleClassDropdown(); // initial run
  });
</script>

      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
