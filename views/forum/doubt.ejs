<%- include('../partials/header') %> 
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4 text-primary">Naya Doubt/Forum Post Banaen</h1>

            <form action="/forum" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title/Topic:</label>
                    <input type="text" class="form-control" id="title" name="forum[title]" required 
                           placeholder="Apne doubt ka short title likhen">
                    <div class="invalid-feedback">
                        Please provide a title for your doubt.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Detailed Description:</label>
                    <textarea class="form-control" id="description" name="forum[description]" rows="7" required
                              placeholder="Apne doubt ko detail mein explain karein."></textarea>
                    <div class="invalid-feedback">
                        Please provide a detailed description of your doubt.
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="tags" class="form-label">Tags (e.g., nodejs, math, mongo):</label>
                    <input type="text" class="form-control" id="tags" name="forum[tags]"
                           placeholder="Tags ko comma se separate karein">
                    <div class="form-text">Separate tags with commas for better visibility.</div>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-success btn-lg" type="submit">Post Doubt</button>
                    <a href="/forum" class="btn btn-secondary">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>

<%- include('../partials/footer') %>