<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">

      <h3><%= __('Community Forum') %></h3>

      <% if (forum && forum.length > 0) { %>
        <% forum.slice().reverse().forEach(post => { %>
          <div class="card mb-3 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h6 class="mb-0"><%= post.subject %></h6>
              <small class="text-muted"><%= new Date(post.createdAt).toLocaleString() %></small>
            </div>
            <div class="card-body">
              <p class="card-text"><%= post.question %></p>
              <footer class="blockquote-footer mb-0">
                <%= __('Asked by') %>: <strong><%= post.askedBy.name %></strong>
              </footer>
            </div>

            <div class="card-footer bg-light">
              <h6 class="mb-2"><%= __('Answers') %>:</h6>
              
              <% if (post.answers && post.answers.length > 0) { %>
                <% post.answers.forEach(answer => { %>
                  <div class="border-bottom pb-2 mb-2">
                    <p class="mb-1"><%= answer.text %></p>
                    <small class="text-muted d-block">
                      â€” <strong><%= answer.answeredBy.name %></strong> 
                      <span class="ms-2">(<%= new Date(answer.createdAt).toLocaleString() %>)</span>
                    </small>
                  </div>
                <% }) %>
              <% } else { %>
                <p class="text-muted"><small><%= __('No answers yet.') %></small></p>
              <% } %>

              <form action="/forum/reply/<%= post._id %>" method="POST" class="mt-3">
                <div class="input-group">
                  <input type="text" class="form-control form-control-sm" name="text" placeholder="<%= __('Write your answer...') %>" required>
                  <button class="btn btn-outline-secondary btn-sm" type="submit"><%= __('Reply') %></button>
                </div>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p><%= __('No questions have been asked in this forum yet.') %></p>
      <% } %>

    </div>
  </div>
</div>

<%- include('../partials/footer') %>