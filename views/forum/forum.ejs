<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">

      <h3><%= __('Community Forum') %></h3>

      <% if (forum && forum.length > 0) { %>
        <% forum.slice().reverse().forEach(post => { %>
          <article class="forum-card mb-3">
            <div class="forum-header">
              <div class="avatar"><%= post.askedBy && post.askedBy.name ? post.askedBy.name.split(' ').map(n=>n[0]).slice(0,2).join('') : 'U' %></div>
              <div class="forum-meta">
                <p class="forum-title"><%= post.subject %></p>
                <div class="forum-submeta">
                  <span><%= post.askedBy ? post.askedBy.name : 'Deleted user' %></span>
                  &middot;
                  <small class="text-muted"><%= new Date(post.createdAt).toLocaleString() %></small>
                  <% if (post.classRef && post.classRef.classNumber) { %>
                    &middot;
                    <small class="ms-2 text-muted">Class <strong><%= post.classRef.classNumber %></strong></small>
                  <% } %>
                </div>
                <% if (post.tags && post.tags.length) { %>
                  <div class="mt-2">
                    <% post.tags.forEach(tag => { %>
                      <span class="tag-badge"><%= tag %></span>
                    <% }) %>
                  </div>
                <% } %>
              </div>
            </div>

            <div class="forum-body">
              <p><%= post.question %></p>
            </div>

            <div class="answers-wrap">
              <h6 class="mb-2"><%= __('Answers') %></h6>
              <% if (post.answers && post.answers.length > 0) { %>
                <% post.answers.forEach(answer => { %>
                  <div class="answer">
                    <div class="avatar"><%= answer.answeredBy && answer.answeredBy.name ? answer.answeredBy.name.split(' ').map(n=>n[0]).slice(0,2).join('') : 'U' %></div>
                    <div>
                      <p class="mb-1"><%= answer.text %></p>
                      <small class="text-muted">â€” <strong><%= answer.answeredBy ? answer.answeredBy.name : __('User deleted') %></strong>
                      <span class="ms-2">(<%= new Date(answer.createdAt).toLocaleString() %>)</span></small>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <p class="text-muted"><small><%= __('No answers yet.') %> <%= __('Be the first to reply!') %></small></p>
              <% } %>

              <div class="reply-box">
                <form action="/forum/<%= post._id %>/answer" method="POST" class="d-flex gap-2">
                  <input type="text" class="form-control form-control-sm" name="text" placeholder="<%= __('Write your answer...') %>" required>
                  <button class="btn btn-primary reply-btn" type="submit"><%= __('Reply') %></button>
                </form>
              </div>
            </div>
          </article>
        <% }) %>
      <% } else { %>
        <p><%= __('No questions have been asked in this forum yet.') %></p>
      <% } %>

    </div>
  </div>
</div>

<%- include('../partials/footer') %>