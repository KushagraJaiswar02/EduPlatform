<%- include('../partials/header') %>

<div class="container mt-4">
  <h3 class="fw-bold mb-4">ğŸ“ My Quizzes</h3>

  <% if (!quizzes || quizzes.length === 0) { %>
    <p class="text-muted">You havenâ€™t created any quizzes yet.</p>
  <% } else { %>

    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Class</th>
          <th>Lesson</th>
          <th>Subject</th>
          <th>Questions</th>
        </tr>
      </thead>

      <tbody>
        <% quizzes.forEach(q => { %>
          <tr>

            <!-- CORRECT CLASS DISPLAY -->
            <td>
              Class 
              <%= 
                q.lessonId 
                && q.lessonId.classRef 
                && q.lessonId.classRef.classNumber 
                  ? q.lessonId.classRef.classNumber 
                  : "N/A" 
              %>
            </td>

            <!-- LESSON -->
            <td><%= q.lessonId ? q.lessonId.title : 'Unknown Lesson' %></td>

            <!-- SUBJECT -->
            <td><%= q.lessonId ? q.lessonId.subject : '-' %></td>

            <!-- QUESTION COUNT -->
            <td><%= q.questions ? q.questions.length : 0 %></td>

          </tr>
        <% }) %>
      </tbody>
    </table>

  <% } %>
</div>

<%- include('../partials/footer') %>
